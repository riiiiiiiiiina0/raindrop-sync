{
  "manifest_version": 3,
  "name": "Raindrop Sync",
  "version": "1.20.0",
  "description": "Automatically syncs your Raindrop.io bookmarks to Chrome dailyâ€”no manual export required.",
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://api.raindrop.io/*",
    "https://up.raindrop.io/*",
    "https://*.amazonaws.com/*",
    "https://*.s3.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Raindrop Sync"
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}
